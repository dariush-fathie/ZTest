<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:clickable="true"
    android:focusable="true"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:src="@drawable/ic_ctscan" />

        <RelativeLayout
            android:id="@+id/rl_drawer1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp">


            <View
                android:id="@+id/v1"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/green" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v1"
                android:padding="8dp"
                android:src="@drawable/ic_hospital" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv1"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="بانک سلامت"
                android:textColor="@color/green"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_drawer2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp">

            <View
                android:id="@+id/v2"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v2"
                android:padding="8dp"
                android:src="@drawable/ic_radiology" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv2"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="نشان شده ها"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_drawer3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp">

            <View
                android:id="@+id/v3"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v3"
                android:padding="8dp"
                android:src="@drawable/ic_lab" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv3"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="درباره ژین"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_drawer4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp">

            <View
                android:id="@+id/v4"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v4"
                android:padding="8dp"
                android:src="@drawable/ic_sonography" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv4"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="تماس با ما"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/rl_exit"
        android:background="@color/back" />

    <RelativeLayout
        android:id="@+id/rl_exit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_sonography" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/iv_exit"
            android:gravity="center"
            android:text="خروج از برنامه"
            android:textSize="16sp"
            app:fontFamily="@font/yekan" />
    </RelativeLayout>


</RelativeLayout>