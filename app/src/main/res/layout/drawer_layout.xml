<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_ctscan"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <RelativeLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <View
                android:id="@+id/v1"
                android:background="@color/green"
                android:layout_alignParentEnd="true"
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v1"
                android:layout_centerVertical="true"
                android:id="@+id/iv1"
                android:src="@drawable/ic_hospital"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <android.support.v7.widget.AppCompatTextView
                android:paddingEnd="17dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:fontFamily="@font/yekan"
                android:textSize="17sp"
                android:text="بانک سلامت"
                android:layout_toStartOf="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <View
                android:id="@+id/v2"
                android:background="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v2"
                android:layout_centerVertical="true"
                android:id="@+id/iv2"
                android:src="@drawable/ic_radiology"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <android.support.v7.widget.AppCompatTextView
                android:paddingEnd="17dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:fontFamily="@font/yekan"
                android:textSize="17sp"
                android:text="نشان شده ها"
                android:layout_toStartOf="@+id/iv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <View
                android:id="@+id/v3"
                android:background="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v3"
                android:layout_centerVertical="true"
                android:id="@+id/iv3"
                android:src="@drawable/ic_lab"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <android.support.v7.widget.AppCompatTextView
                android:paddingEnd="17dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:fontFamily="@font/yekan"
                android:textSize="17sp"
                android:text="درباره ژین"
                android:layout_toStartOf="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <View
                android:id="@+id/v4"
                android:background="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v4"
                android:layout_centerVertical="true"
                android:id="@+id/iv4"
                android:src="@drawable/ic_sonography"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <android.support.v7.widget.AppCompatTextView
                android:paddingEnd="17dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:fontFamily="@font/yekan"
                android:textSize="17sp"
                android:text="تماس با ما"
                android:layout_toStartOf="@+id/iv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_above="@id/rl_exit"
        android:background="#ababab"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_exit"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_exit"
            android:src="@drawable/ic_sonography"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_toStartOf="@id/iv_exit"
            android:textStyle="bold"
            android:gravity="center"
            app:fontFamily="@font/yekan"
            android:textSize="17sp"
            android:text="خروج از برنامه"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </RelativeLayout>


</RelativeLayout>