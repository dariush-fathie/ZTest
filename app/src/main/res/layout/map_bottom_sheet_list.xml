<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_mapBottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#00f5f5f5"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="ir.paad.ztest.CustomBottomSheetBehavior">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_toggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/white_round_rect"
        android:padding="12dp"
        android:rotation="180"
        android:src="@drawable/ic_dragg"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mapList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/iv_toggle" />
</android.support.constraint.ConstraintLayout>